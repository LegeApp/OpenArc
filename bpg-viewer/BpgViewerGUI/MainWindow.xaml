<Window x:Class="BpgViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:BpgViewer.Views"
        xmlns:viewModels="clr-namespace:BpgViewer.ViewModels"
        mc:Ignorable="d"
        Title="BPG Image Browser"
        Height="768" Width="1280"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">

    <Window.DataContext>
        <viewModels:CatalogViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="*"/>     <!-- Catalog -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#FFE8E8E8">
            <MenuItem Header="_File" Foreground="#FF333333">
                <MenuItem Header="Open _Image..."
                          InputGestureText="Ctrl+O"
                          Click="MenuOpenImage_Click"/>
                <MenuItem Header="Open _Folder..."
                          InputGestureText="Ctrl+Shift+O"
                          Click="MenuOpenFolder_Click"/>
                <Separator/>
                <MenuItem Header="E_xit"
                          InputGestureText="Alt+F4"
                          Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem Header="_View" Foreground="#FF333333">
                <MenuItem Header="Increase Thumbnail Size"
                          InputGestureText="Ctrl+"
                          Command="{Binding IncreaseSizeCommand}"/>
                <MenuItem Header="Decrease Thumbnail Size"
                          InputGestureText="Ctrl-"
                          Command="{Binding DecreaseSizeCommand}"/>
                <Separator/>
                <MenuItem Header="Refresh"
                          InputGestureText="F5"
                          Command="{Binding RefreshCommand}"/>
                <MenuItem Header="Clear Cache"
                          Command="{Binding ClearCacheCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help" Foreground="#FF333333">
                <MenuItem Header="Keyboard _Shortcuts"
                          Click="MenuShortcuts_Click"/>
                <Separator/>
                <MenuItem Header="_About"
                          Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>

        <!-- Catalog View -->
        <views:CatalogView Grid.Row="1"/>
    </Grid>
</Window>
