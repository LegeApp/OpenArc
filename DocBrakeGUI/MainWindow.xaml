<ui:FluentWindow x:Class="DocBrake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:views="clr-namespace:DocBrake.Views"
        Title="OpenArc - Complete Media Archiving" 
        Height="750" 
        Width="1300"
        MinHeight="650"
        MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowCornerPreference="Round"
        WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True"
        AllowDrop="True"
        PreviewDragOver="MainWindow_OnPreviewDragOver"
        Drop="MainWindow_OnDrop">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" 
                     Title="OpenArc"
                     ShowMaximize="True"
                     ShowMinimize="True">
            <ui:TitleBar.Header>
                <StackPanel Orientation="Horizontal" Margin="8,0">
                    <TextBlock Text="ðŸ“¦" 
                               FontSize="18" 
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="OpenArc - Complete Media Archiving" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>
        
        <!-- Main Content -->
        <Border Grid.Row="1" 
                Background="{DynamicResource WindowBrush}"
                CornerRadius="0,0,8,8" 
                ClipToBounds="True">
            <views:MainView />
        </Border>
    </Grid>
</ui:FluentWindow>