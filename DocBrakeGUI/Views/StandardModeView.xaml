<UserControl x:Class="DocBrake.Views.StandardModeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:vm="clr-namespace:DocBrake.ViewModels"
             xmlns:converters="clr-namespace:DocBrake.Converters">

    <UserControl.Resources>
        <converters:ZeroToVisibleConverter x:Key="ZeroToVisibleConverter"/>
        <converters:NonZeroToVisibleConverter x:Key="NonZeroToVisibleConverter"/>
        <converters:FileTypeToIconConverter x:Key="FileTypeToIconConverter"/>
    </UserControl.Resources>

    <Grid Margin="12,8,12,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,14">
            <TextBlock Text="File Selection"
                       FontSize="16" FontWeight="Medium" VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- File Selection -->
        <ui:Card Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Select files and folders to archive:" FontWeight="Medium" Margin="0,0,0,10"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <ui:Button Content="ðŸ“ Add Files" 
                               Command="{Binding AddFileCommand}"
                               Appearance="Secondary"
                               Margin="0,0,10,0"/>
                    <ui:Button Content="ðŸ“‚ Add Folder" 
                               Command="{Binding AddFolderCommand}"
                               Appearance="Secondary"
                               Margin="0,0,10,0"/>
                    <ui:Button Content="ðŸ—‘ï¸ Clear All" 
                               Command="{Binding ClearQueueCommand}"
                               Appearance="Secondary"/>
                </StackPanel>
            </Grid>
        </ui:Card>
        
        <!-- File Queue with Drop Zone -->
        <ui:Card Grid.Row="2">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Files to Archive:" FontWeight="Medium" Margin="0,0,0,10"/>

                <!-- Empty state with drop hint -->
                <Border Grid.Row="1"
                        BorderBrush="{DynamicResource ActiveBorderBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Background="Transparent"
                        Visibility="{Binding QueueFiles.Count, Converter={StaticResource ZeroToVisibleConverter}, FallbackValue=Visible}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“‚" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Drop files or folders here" FontSize="16"
                                   Foreground="{DynamicResource GrayTextBrush}"
                                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBlock Text="or use the buttons above to add files" FontSize="12"
                                   Foreground="{DynamicResource GrayTextBrush}"
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding QueueFiles}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Visibility="{Binding QueueFiles.Count, Converter={StaticResource NonZeroToVisibleConverter}, FallbackValue=Collapsed}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Type" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FileType, Converter={StaticResource FileTypeToIconConverter}}"
                                               FontSize="16" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Name" Binding="{Binding FileName}" Width="*"/>
                        <DataGridTextColumn Header="Size" Binding="{Binding FileSize, StringFormat=N0}" Width="100"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding FileType}" Width="100"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </ui:Card>
        
        <!-- File Count -->
        <TextBlock Grid.Row="3"
                   Text="{Binding QueueFiles.Count, StringFormat='{}{0} file(s) queued'}"
                   FontSize="11" Foreground="{DynamicResource GrayTextBrush}"
                   HorizontalAlignment="Left" Margin="0,6,0,0"/>
    </Grid>
</UserControl>
