<UserControl x:Class="DocBrake.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:DocBrake.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="520"
             Background="{DynamicResource WindowBrush}">
    <UserControl.Resources>
        <converters:EnumToIndexConverter x:Key="EnumToIndexConverter" />
        <converters:ValueEqualsConverter x:Key="ValueEqualsConverter" />

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>

        <Style x:Key="CompactSlider" TargetType="Slider">
            <Setter Property="Height" Value="14"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SettingRow" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="8,6">

            <!-- Storage & Output -->
            <TextBlock Text="Storage &amp; Output" Style="{StaticResource SectionHeader}"/>
            <Grid Style="{StaticResource SettingRow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Output Path" Style="{StaticResource SettingLabel}"/>
                <TextBox Grid.Column="1" Text="{Binding OutputArchivePath}" 
                         IsReadOnly="True" FontSize="9" Height="20" Padding="3,0"/>
                <ui:Button Grid.Column="2" Content="..." 
                           Command="{Binding BrowseOutputArchiveCommand}" 
                           Width="24" Height="20" Margin="4,0,0,0" FontSize="9"/>
            </Grid>

            <Grid Style="{StaticResource SettingRow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Phone Path" Style="{StaticResource SettingLabel}"/>
                <TextBox Grid.Column="1" Text="{Binding PhoneSourcePath}" 
                         IsReadOnly="True" FontSize="9" Height="20" Padding="3,0"/>
                <ui:Button Grid.Column="2" Content="..." 
                           Command="{Binding BrowsePhoneSourceCommand}" 
                           Width="24" Height="20" Margin="4,0,0,0" FontSize="9"/>
            </Grid>

            <CheckBox Content="Auto-detect phones" 
                      IsChecked="{Binding AutoDetectPhone}" 
                      FontSize="10" Margin="0,4,0,8"/>

            <!-- Image Compression (BPG) -->
            <TextBlock Text="Image Compression (BPG)" Style="{StaticResource SectionHeader}"/>

            <Grid Style="{StaticResource SettingRow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Quality" Style="{StaticResource SettingLabel}"/>
                <Slider Grid.Column="1" Minimum="0" Maximum="51" Value="{Binding BpgQuality}" 
                        Style="{StaticResource CompactSlider}" TickFrequency="1" IsSnapToTickEnabled="True"/>
                <TextBlock Grid.Column="2" Text="{Binding BpgQuality}" 
                           FontSize="9" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>

            <Grid Style="{StaticResource SettingRow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Bit Depth" Style="{StaticResource SettingLabel}"/>
                <Slider Grid.Column="1" Minimum="8" Maximum="12" Value="{Binding BpgBitDepth}" 
                        Style="{StaticResource CompactSlider}" TickFrequency="1" IsSnapToTickEnabled="True"/>
                <TextBlock Grid.Column="2" Text="{Binding BpgBitDepth}" 
                           FontSize="9" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>

            <Grid Style="{StaticResource SettingRow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Encoder" Style="{StaticResource SettingLabel}" VerticalAlignment="Top" Margin="0,2,0,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,1">
                    <RadioButton Content="Default" GroupName="BpgEncoder" FontSize="9" Margin="0,0,10,0"
                                 IsChecked="{Binding BpgEncoderType, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=0}"/>
                    <RadioButton Content="Slow" GroupName="BpgEncoder" FontSize="9"
                                 IsChecked="{Binding BpgEncoderType, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=1}"/>
                </StackPanel>
            </Grid>

            <Grid Style="{StaticResource SettingRow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Chroma" Style="{StaticResource SettingLabel}" VerticalAlignment="Top" Margin="0,2,0,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,1">
                    <RadioButton Content="4:2:0" GroupName="BpgChroma" FontSize="9" Margin="0,0,6,0"
                                 IsChecked="{Binding BpgChromaFormat, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=0}"/>
                    <RadioButton Content="4:4:4" GroupName="BpgChroma" FontSize="9" Margin="0,0,6,0"
                                 IsChecked="{Binding BpgChromaFormat, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=1}"/>
                    <RadioButton Content="RGB" GroupName="BpgChroma" FontSize="9"
                                 IsChecked="{Binding BpgChromaFormat, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=2}"/>
                </StackPanel>
            </Grid>

            <!-- Video Compression -->
            <TextBlock Text="Video Compression (FFmpeg)" Style="{StaticResource SectionHeader}"/>

            <Grid Style="{StaticResource SettingRow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Codec" Style="{StaticResource SettingLabel}"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton Content="H.264" GroupName="VideoCodec" FontSize="9" Margin="0,0,10,0"
                                 IsChecked="{Binding VideoCodec, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=H264}"/>
                    <RadioButton Content="H.265" GroupName="VideoCodec" FontSize="9"
                                 IsChecked="{Binding VideoCodec, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=H265}"/>
                </StackPanel>
            </Grid>

            <Grid Style="{StaticResource SettingRow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Speed" Style="{StaticResource SettingLabel}"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <RadioButton Content="Fast" GroupName="VideoSpeed" FontSize="9" Margin="0,0,6,0"
                                 IsChecked="{Binding VideoSpeed, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=Fast}"/>
                    <RadioButton Content="Med" GroupName="VideoSpeed" FontSize="9" Margin="0,0,6,0"
                                 IsChecked="{Binding VideoSpeed, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=Medium}"/>
                    <RadioButton Content="Slow" GroupName="VideoSpeed" FontSize="9"
                                 IsChecked="{Binding VideoSpeed, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=Slow}"/>
                </StackPanel>
            </Grid>

            <Grid Style="{StaticResource SettingRow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="CRF" Style="{StaticResource SettingLabel}" ToolTip="Constant Rate Factor - lower = better quality"/>
                <Slider Grid.Column="1" Minimum="0" Maximum="51" Value="{Binding VideoCrf}" 
                        Style="{StaticResource CompactSlider}" TickFrequency="1" IsSnapToTickEnabled="True"/>
                <TextBlock Grid.Column="2" Text="{Binding VideoCrf}" 
                           FontSize="9" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>

            <CheckBox Content="Skip already compressed videos" 
                      IsChecked="{Binding SkipAlreadyCompressedVideos}" 
                      FontSize="10" Margin="0,4,0,8"/>

            <!-- Archive Settings -->
            <TextBlock Text="Archive Settings" Style="{StaticResource SectionHeader}"/>

            <Grid Style="{StaticResource SettingRow}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="OARC Level" Style="{StaticResource SettingLabel}" 
                           ToolTip=".oarc compression level (1-22). .zstd files always use level 3"/>
                <Slider Grid.Column="1" Minimum="1" Maximum="22" Value="{Binding CompressionLevel}" 
                        Style="{StaticResource CompactSlider}" TickFrequency="1" IsSnapToTickEnabled="True"/>
                <TextBlock Grid.Column="2" Text="{Binding CompressionLevel}" 
                           FontSize="9" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>

            <CheckBox Content="Enable Catalog" IsChecked="{Binding EnableCatalog}" FontSize="10" Margin="0,4,0,2"/>
            <CheckBox Content="Enable Deduplication" IsChecked="{Binding EnableDedup}" FontSize="10" Margin="0,2,0,4"/>

        </StackPanel>
</UserControl>