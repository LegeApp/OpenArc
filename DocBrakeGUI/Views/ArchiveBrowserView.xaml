<UserControl x:Class="DocBrake.Views.ArchiveBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:viewmodels="clr-namespace:DocBrake.ViewModels"
             xmlns:converters="clr-namespace:DocBrake.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:ArchiveTrackingViewModel}"
             d:DesignHeight="450" d:DesignWidth="300"
             Background="{DynamicResource ControlBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:ArchiveSizeConverter x:Key="ArchiveSizeConverter" />
        <converters:TimestampConverter x:Key="TimestampConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="ðŸ“" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBlock Text="Archive Tracking" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
            <ui:Button x:Name="RefreshButton"
                       Content="ðŸ”„ Refresh"
                       Command="{Binding LoadArchivesCommand}"
                       Padding="8,4"
                       FontSize="11" />
        </StackPanel>

        <!-- Loading indicator -->
        <Grid Grid.Row="1" Margin="0,0,0,12" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Loading..." VerticalAlignment="Center" FontSize="11" Foreground="{DynamicResource GrayTextBrush}"/>
            </StackPanel>
        </Grid>

        <!-- Archives List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Archives}" 
                          AlternationCount="2">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,6" 
                                Padding="8" 
                                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorSecondaryBrush}" />
                                        </Trigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, 
                                                     Path=(ItemsControl.AlternationIndex)}" Value="0">
                                            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, 
                                                     Path=(ItemsControl.AlternationIndex)}" Value="1">
                                            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorSecondaryBrush}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Archive Name -->
                                <TextBlock Grid.Row="0"
                                           Text="{Binding ArchivePath, Converter={StaticResource StringNotEmptyConverter}}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding ArchivePath}"/>

                                <!-- Size and File Count -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="{Binding ArchiveSize, Converter={StaticResource ArchiveSizeConverter}}"
                                               FontSize="10"
                                               Foreground="{DynamicResource GrayTextBrush}"/>
                                    <TextBlock Text=" â€¢ " FontSize="10" Foreground="{DynamicResource GrayTextBrush}" Margin="4,0"/>
                                    <TextBlock Text="{Binding FileCount, StringFormat='{}{0} files'}"
                                               FontSize="10"
                                               Foreground="{DynamicResource GrayTextBrush}"/>
                                </StackPanel>

                                <!-- Creation Date -->
                                <TextBlock Grid.Row="2"
                                           Text="{Binding CreationDate, Converter={StaticResource TimestampConverter}}"
                                           FontSize="10"
                                           Foreground="{DynamicResource GrayTextBrush}"
                                           Margin="0,2,0,0"/>

                                <!-- Destination Location -->
                                <TextBlock Grid.Row="3"
                                           Text="{Binding DestinationLocation, StringFormat='â†’ {0}', TargetNullValue=''}"
                                           FontSize="10"
                                           Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                                           Margin="0,2,0,0"
                                           TextTrimming="CharacterEllipsis"
                                           Visibility="{Binding DestinationLocation, Converter={StaticResource StringToVisibilityConverter}}"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,6,0,0" HorizontalAlignment="Right">
                                    <ui:Button Content="Archive"
                                               Command="{Binding DataContext.ArchiveEntryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding}"
                                               Padding="6,3"
                                               FontSize="9"
                                               Margin="0,0,4,0"
                                               Appearance="Secondary"
                                               ToolTip="Hide this archive from the list (data preserved)"/>
                                    <ui:Button Content="Delete"
                                               Command="{Binding DataContext.DeleteEntryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding}"
                                               Padding="6,3"
                                               FontSize="9"
                                               Appearance="Secondary"
                                               ToolTip="Permanently remove this archive entry from the database"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status Message -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding StatusMessage}" 
                   VerticalAlignment="Bottom"
                   FontSize="10"
                   Foreground="{DynamicResource GrayTextBrush}"
                   Margin="0,0,0,4"
                   Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
    </Grid>
</UserControl>