<UserControl x:Class="DocBrake.Views.PhoneModeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:vm="clr-namespace:DocBrake.ViewModels"
             xmlns:converters="clr-namespace:DocBrake.Converters">

    <UserControl.Resources>
        <converters:ZeroToVisibleConverter x:Key="ZeroToVisibleConverter"/>
        <converters:NonZeroToVisibleConverter x:Key="NonZeroToVisibleConverter"/>
        <converters:FileTypeToIconConverter x:Key="FileTypeToIconConverter"/>
    </UserControl.Resources>

    <Grid Margin="12,8,12,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,14">
            <TextBlock Text="Phone Media"
                       FontSize="16" FontWeight="Medium" VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Phone Detection Status -->
        <ui:Card Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Phone Status:" FontWeight="Medium"/>
                    <TextBlock Text="{Binding ProcessingOptions.PhoneSourcePath, FallbackValue='Set Phone Source Path in Settings'}" Margin="0,5,0,0"/>
                    <TextBlock Text="Auto-detect placeholder" FontSize="12" Foreground="Gray"/>
                </StackPanel>
                
                <ui:Button Grid.Column="1" 
                           Content="ðŸ“‚ Import Folder" 
                           Command="{Binding AddFolderCommand}"
                           Appearance="Secondary"/>
            </Grid>
        </ui:Card>
        
        <!-- Phone Storage Content with Drop Zone -->
        <ui:Card Grid.Row="2">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Storage Info -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="ðŸ“± Phone Storage:" FontWeight="Medium"/>
                    <TextBlock Text="{Binding ProcessingOptions.PhoneSourcePath}" Margin="10,0,0,0" Foreground="Gray"/>
                </StackPanel>

                <!-- Empty state with drop hint -->
                <Border Grid.Row="1"
                        BorderBrush="{DynamicResource ActiveBorderBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Background="Transparent"
                        Visibility="{Binding QueueFiles.Count, Converter={StaticResource ZeroToVisibleConverter}, FallbackValue=Visible}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“±" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Drop phone media files here" FontSize="16"
                                   Foreground="{DynamicResource GrayTextBrush}"
                                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBlock Text="or click Import Folder to browse" FontSize="12"
                                   Foreground="{DynamicResource GrayTextBrush}"
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- File List -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding QueueFiles}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Visibility="{Binding QueueFiles.Count, Converter={StaticResource NonZeroToVisibleConverter}, FallbackValue=Collapsed}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Type" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FileType, Converter={StaticResource FileTypeToIconConverter}}"
                                               FontSize="16" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Name" Binding="{Binding FileName}" Width="*"/>
                        <DataGridTextColumn Header="Size" Binding="{Binding FileSize, StringFormat=N0}" Width="100"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding AddedTime, StringFormat=yyyy-MM-dd}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </ui:Card>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock Text="{Binding QueueFiles.Count, StringFormat='Files: {0}'}" 
                       VerticalAlignment="Center" Margin="0,0,20,0"/>
        </StackPanel>
    </Grid>
</UserControl>
