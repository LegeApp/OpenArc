<UserControl x:Class="DocBrake.MediaBrowser.Views.MediaBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
             xmlns:converters="clr-namespace:DocBrake.MediaBrowser.Converters"
             xmlns:coreConverters="clr-namespace:DocBrake.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#FFF5F5F5"
             AllowDrop="True"
             Drop="UserControl_Drop"
             DragOver="UserControl_DragOver">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="FolderSelectionIndicatorResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
            <converters:NonZeroToVisibilityConverter x:Key="NonZeroToVisibilityConverter"/>
            <coreConverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <coreConverters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

            <!-- Thumbnail item template -->
            <DataTemplate x:Key="ThumbnailTemplate">
            <Border x:Name="ThumbnailBorder"
                    Margin="{Binding DataContext.ThumbnailMargin, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    RenderTransformOrigin="0.5,0.5"
                    >
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                </Border.RenderTransform>

                <Grid Width="{Binding DataContext.ThumbnailSize, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Checkbox and file name ABOVE thumbnail -->
                    <Grid Grid.Row="0" Margin="2,0,2,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox Grid.Column="0" 
                                  IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,4,0"
                                  Click="Checkbox_Click"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Foreground="#FF333333"
                                      FontSize="11"
                                      TextTrimming="CharacterEllipsis"
                                      TextAlignment="Left"
                                      ToolTip="{Binding FileName}"
                                      MouseLeftButtonDown="Filename_MouseLeftButtonDown">
                                <Run Text="{Binding FileNameWithoutExtension, Mode=OneWay}"/>
                                <Run Text=" " />
                                <Run Text="{Binding FileExtension, Mode=OneWay}" Foreground="#FF666666"/>
                            </TextBlock>
                            <TextBlock Foreground="#FF888888"
                                      FontSize="9"
                                      TextAlignment="Left">
                                <Run Text="{Binding FileSizeFormatted, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <!-- Thumbnail image -->
                    <Grid Grid.Row="1" Height="{Binding DataContext.ThumbnailImageHeight, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <!-- Loading indicator -->
                        <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <TextBlock Text="⏳"
                                      FontSize="24"
                                      HorizontalAlignment="Center"
                                      Foreground="#FF888888"/>
                        </StackPanel>

                        <!-- Error indicator -->
                        <StackPanel Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <TextBlock Text="❌"
                                      FontSize="24"
                                      HorizontalAlignment="Center"
                                      Foreground="#FFCC6666"/>
                        </StackPanel>

                        <!-- Actual thumbnail -->
                        <Image Source="{Binding ThumbnailImage}"
                              Stretch="Uniform"
                              RenderOptions.BitmapScalingMode="HighQuality"
                              Visibility="{Binding ThumbnailImage, Converter={StaticResource NullToVisibilityConverter}}"
                              MouseLeftButtonDown="ThumbnailImage_MouseLeftButtonDown"/>
                    </Grid>
                </Grid>
            </Border>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter TargetName="ThumbnailBorder" Property="BorderBrush" Value="#FF007ACC"/>
                    <Setter TargetName="ThumbnailBorder" Property="BorderThickness" Value="2"/>
                </DataTrigger>
                <Trigger SourceName="ThumbnailBorder" Property="IsMouseOver" Value="True">
                    <Setter TargetName="ThumbnailBorder" Property="Background" Value="#10000000"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="ThumbnailBorder"
                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.02"
                                               Duration="0:0:0.1">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetName="ThumbnailBorder"
                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.02"
                                               Duration="0:0:0.1">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="ThumbnailBorder"
                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.0"
                                               Duration="0:0:0.1">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetName="ThumbnailBorder"
                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.0"
                                               Duration="0:0:0.1">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </DataTemplate.Triggers>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Thumbnails -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
               Background="#FFE8E8E8"
               BorderBrush="#FFD0D0D0"
               BorderThickness="0,0,0,1"
               Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content=" Open File"
                           Command="{Binding OpenFileCommand}"
                           Padding="10,5"
                           Margin="0,0,5,0"
                           Background="#FFDDDDDD"
                           Foreground="#FF333333"
                           BorderThickness="1"
                           BorderBrush="#FFC0C0C0"/>

                    <Button Content=" Open Folder"
                           Command="{Binding OpenFolderCommand}"
                           Padding="10,5"
                           Margin="0,0,5,0"
                           Background="#FFDDDDDD"
                           Foreground="#FF333333"
                           BorderThickness="1"
                           BorderBrush="#FFC0C0C0"/>

                    <Button Content=" Refresh"
                           Command="{Binding RefreshCommand}"
                           Padding="10,5"
                           Margin="0,0,5,0"
                           Background="#FFDDDDDD"
                           Foreground="#FF333333"
                           BorderThickness="1"
                           BorderBrush="#FFC0C0C0"/>

                    <Separator Width="1" Background="#FFD0D0D0" Margin="10,0"/>

                    <Grid VerticalAlignment="Center">
                        <TextBlock x:Name="DirectoryNameText"
                                  Text="{Binding DirectoryName}"
                                  Foreground="#FF555555"
                                  VerticalAlignment="Center"
                                  FontSize="12"
                                  MaxWidth="400"
                                  TextTrimming="CharacterEllipsis"
                                  ToolTip="{Binding CurrentDirectory}"
                                  MouseLeftButtonDown="DirectoryName_MouseLeftButtonDown"/>

                        <TextBox x:Name="DirectoryPathTextBox"
                                 Text="{Binding CurrentDirectory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#FF333333"
                                 Background="#FFFFFFFF"
                                 BorderBrush="#FF007ACC"
                                 BorderThickness="1"
                                 Padding="4,2"
                                 FontSize="12"
                                 Width="420"
                                 Visibility="Collapsed"
                                 KeyDown="DirectoryPathTextBox_KeyDown"
                                 LostFocus="DirectoryPathTextBox_LostFocus"/>
                    </Grid>

                    <Separator Width="1" Background="#FFD0D0D0" Margin="10,0"/>

                    <!-- Selection controls -->
                    <Button Content=" Select All"
                           Command="{Binding SelectAllCommand}"
                           Padding="10,5"
                           Margin="0,0,5,0"
                           Background="#FFDDDDDD"
                           Foreground="#FF333333"
                           BorderThickness="1"
                           BorderBrush="#FFC0C0C0"/>

                    <Button Content=" Clear"
                           Command="{Binding ClearSelectionCommand}"
                           Padding="10,5"
                           Margin="0,0,5,0"
                           Background="#FFDDDDDD"
                           Foreground="#FF333333"
                           BorderThickness="1"
                           BorderBrush="#FFC0C0C0"/>

                    <TextBlock Text="{Binding SelectionSummary}"
                              Foreground="#FF007ACC"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Right controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Size:"
                              Foreground="#FF555555"
                              VerticalAlignment="Center"
                              Margin="0,0,5,0"/>

                    <Slider Minimum="80"
                            Maximum="600"
                            Value="{Binding ThumbnailSize, Mode=TwoWay}"
                            Width="130"
                            Height="22"
                            IsSnapToTickEnabled="True"
                            TickFrequency="10"
                            Background="#FFE0E0E0"/>

                    <Separator Width="1" Background="#FFD0D0D0" Margin="10,0"/>

                    <Button Content="Details"
                            Command="{Binding ToggleDetailsViewCommand}"
                            Padding="10,5"
                            Margin="0,0,5,0"
                            Background="#FFDDDDDD"
                            Foreground="#FF333333"
                            BorderThickness="1"
                            BorderBrush="#FFC0C0C0"/>

                    <Separator Width="1" Background="#FFD0D0D0" Margin="10,0"/>

                    <Button Content=" Clear Cache"
                           Command="{Binding ClearCacheCommand}"
                           Padding="10,5"
                           Background="#FFDDDDDD"
                           Foreground="#FF333333"
                           BorderThickness="1"
                           BorderBrush="#FFC0C0C0"
                           ToolTip="{Binding CacheSizeFormatted, StringFormat='Cache size: {0}'}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- File Browser Sidebar -->
            <TreeView Grid.Column="0" 
                      ItemsSource="{Binding RootFolders}"
                      BorderThickness="0"
                      Background="#FFF0F0F0"
                      Padding="5"
                      SelectedItemChanged="TreeView_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding SubFolders}">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Border x:Name="FolderIconBorder"
                                    Width="18"
                                    Height="18"
                                    Margin="0,0,6,0"
                                    BorderBrush="Transparent"
                                    BorderThickness="1"
                                    CornerRadius="2"
                                    Background="Transparent"
                                    MouseLeftButtonDown="FolderIcon_MouseLeftButtonDown">
                                <TextBlock Text="{Binding Icon}" Foreground="#FF666666" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="FolderNameText" Text="{Binding Name}" Foreground="#FF333333"/>
                        </StackPanel>
                        <HierarchicalDataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                <Setter TargetName="FolderIconBorder" Property="BorderBrush" Value="{StaticResource FolderSelectionSelectedBorderBrush}"/>
                                <Setter TargetName="FolderIconBorder" Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsChecked}" Value="False"/>
                                    <Condition Binding="{Binding HasExplicitCheckState}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="FolderIconBorder" Property="BorderBrush" Value="{StaticResource FolderSelectionIgnoredBorderBrush}"/>
                                <Setter TargetName="FolderIconBorder" Property="BorderThickness" Value="2"/>
                            </MultiDataTrigger>
                            <DataTrigger Binding="{Binding IsChecked}" Value="{x:Null}">
                                <Setter TargetName="FolderIconBorder" Property="BorderBrush" Value="{StaticResource FolderSelectionPartialBorderBrush}"/>
                                <Setter TargetName="FolderIconBorder" Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsDcimFolder}" Value="True">
                                <Setter TargetName="FolderNameText" Property="TextBlock.FontWeight" Value="SemiBold"/>
                                <Setter TargetName="FolderNameText" Property="TextBlock.Foreground" Value="#FF007ACC"/>
                            </DataTrigger>
                        </HierarchicalDataTemplate.Triggers>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         Width="3" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Stretch"
                         Background="#FFE0E0E0"/>

            <!-- Content (Thumbnails or Details) -->
            <Grid Grid.Column="2"
                  x:Name="ThumbnailScroller"
                  Background="#FFF5F5F5"
                  PreviewKeyDown="MediaBrowserView_KeyDown"
                  Focusable="True">

                <Button Content="Show Prepared"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,8,8,0"
                        Padding="10,4"
                        Command="{Binding ToggleQueuePanelCommand}"
                        Visibility="{Binding IsQueuePanelVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                    <StackPanel Visibility="{Binding TotalCount, Converter={StaticResource ZeroToVisibilityConverter}}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="50">
                    <TextBlock Text=" "
                              FontSize="72"
                              HorizontalAlignment="Center"
                              Foreground="#FF999999"/>
                    <TextBlock Text="No files"
                              FontSize="20"
                              HorizontalAlignment="Center"
                              Foreground="#FF666666"
                              Margin="0,10,0,0"/>
                    <TextBlock Text="Select a folder or drag files here"
                              FontSize="12"
                              HorizontalAlignment="Center"
                              Foreground="#FF888888"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Thumbnails ListView with VirtualizingWrapPanel -->
                <ListView x:Name="ThumbnailsList"
                         ItemsSource="{Binding Thumbnails}"
                         ItemTemplate="{StaticResource ThumbnailTemplate}"
                         HorizontalAlignment="Stretch"
                         HorizontalContentAlignment="Stretch"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         SelectionMode="Extended"
                         SelectionChanged="ItemsList_SelectionChanged"
                         PreviewMouseRightButtonDown="ItemsList_PreviewMouseRightButtonDown"
                         PreviewMouseMove="ItemsList_PreviewMouseMove"
                         KeyDown="ItemsList_KeyDown"
                         Visibility="{Binding IsDetailsView, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add to queue" Click="ContextMenu_AddToQueue_Click"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <vwp:VirtualizingWrapPanel Orientation="Horizontal"
                                                      SpacingMode="Uniform"
                                                      StretchItems="False"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                    <!-- Details ListView (Explorer-style) -->
                    <ListView x:Name="DetailsList"
                             ItemsSource="{Binding Thumbnails}"
                             Background="Transparent"
                             BorderThickness="0"
                             SelectionMode="Extended"
                             SelectionChanged="ItemsList_SelectionChanged"
                             PreviewMouseRightButtonDown="ItemsList_PreviewMouseRightButtonDown"
                             PreviewMouseMove="ItemsList_PreviewMouseMove"
                             KeyDown="ItemsList_KeyDown"
                             Visibility="{Binding IsDetailsView, Converter={StaticResource BoolToVisibilityConverter}}"
                             MouseDoubleClick="DetailsList_MouseDoubleClick">
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Add to queue" Click="ContextMenu_AddToQueue_Click"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="28">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                      VerticalAlignment="Center"
                                                      Click="Checkbox_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="320">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Name" Tag="FileName"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="FileName"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>
                                <GridViewColumn Width="160">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Date Modified" Tag="LastModified"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="LastModified" StringFormat="{}{0:yyyy-MM-dd HH:mm}"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>
                                <GridViewColumn Width="110">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Type" Tag="FileExtension"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="FileExtension"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>
                                <GridViewColumn Width="110">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Content="Size" Tag="FileSize"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="FileSizeFormatted"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
            </Grid>

            <GridSplitter Grid.Column="3"
                         Width="4"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Stretch"
                         Background="#FFE0E0E0"
                         Visibility="{Binding IsQueuePanelVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <Border Grid.Column="4"
                    Width="320"
                    Background="#FFF0F0F0"
                    BorderBrush="#FFD0D0D0"
                    BorderThickness="1,0,0,0"
                    Visibility="{Binding IsQueuePanelVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid AllowDrop="True"
                      DragOver="QueuePanel_DragOver"
                      Drop="QueuePanel_Drop">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="10,8" Background="#FFE8E8E8" BorderBrush="#FFD0D0D0" BorderThickness="0,0,0,1">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" Foreground="#FF333333" FontWeight="SemiBold">
                                <Run Text="Prepared"/>
                                <Run Text=" ("/>
                                <Run Text="{Binding SelectedCount, Mode=OneWay}"/>
                                <Run Text=")"/>
                            </TextBlock>
                            <Button DockPanel.Dock="Right"
                                    Content="Hide"
                                    Padding="8,2"
                                    Command="{Binding ToggleQueuePanelCommand}"/>
                        </DockPanel>
                    </Border>

                    <ListView Grid.Row="1"
                             ItemsSource="{Binding PreparedItemsView}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="6,4">
                                    <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,6,0" Click="Checkbox_Click"/>
                                    <TextBlock Text="{Binding FileName}" Foreground="#FF333333" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,8">
                        <Button Content="Clear" Padding="10,4" Margin="0,0,6,0" Command="{Binding ClearSelectionCommand}"/>
                        <Button Content="Add to queue" Padding="12,4" Command="{Binding AddPreparedToQueueCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2"
               Background="#FFE8E8E8"
               BorderBrush="#FFD0D0D0"
               BorderThickness="0,1,0,0"
               Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                          Text="{Binding StatusMessage}"
                          Foreground="#FF555555"
                          VerticalAlignment="Center"/>

                <!-- Loading progress (only visible when loading) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                           Margin="0,0,15,0">
                    <ProgressBar Width="100" Height="12" 
                                Value="{Binding LoadingProgress, Mode=OneWay}" Maximum="100"
                                Margin="0,0,8,0"/>
                    <TextBlock Foreground="#FF555555" VerticalAlignment="Center" FontSize="11">
                        <Run Text="{Binding LoadedCount, Mode=OneWay}"/><Run Text="/"/><Run Text="{Binding TotalCount, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>

                <TextBlock Grid.Column="2"
                          Foreground="#FF888888"
                          VerticalAlignment="Center">
                    <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                    <Run Text="files"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
